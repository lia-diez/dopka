{
  "name": "dopka",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run format-check && npm run eslint-check && npm run stylelint-check",
    "fix": "npm run format-fix && npm run eslint-fix && npm run stylelint-fix",
    "prepare": "husky install",
    "format-fix": "prettier --write . --ignore-path .gitignore",
    "format-check": "prettier --check . --ignore-path .gitignore",
    "eslint-fix": "eslint . --fix --ignore-path .gitignore",
    "eslint-check": "eslint . --ignore-path .gitignore",
    "stylelint-fix": "stylelint \"**/*.css\" --fix --ignore-path .gitignore",
    "stylelint-check": "stylelint \"**/*.css\" --ignore-path .gitignore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lia-diez/dopka.git"
  },
  "author": "Holovach and Hlushchenko",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lia-diez/dopka/issues"
  },
  "homepage": "https://github.com/lia-diez/dopka#readme",
  "devDependencies": {
    "eslint": "^8.7.0",
    "eslint-config-metarhia": "^7.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-sonarjs": "^0.11.0",
    "husky": "^7.0.4",
    "prettier": "2.5.1",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0"
  },
  "dependencies": {
    "stylelint-config-prettier": "^9.0.3"
  }
}
